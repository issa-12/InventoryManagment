@page
@model InventoryManagment.Pages.EditInventoryModel

@{
    ViewData["Title"] = "Edit Inventory Item";
}

<h2>@ViewData["Title"]</h2>

<!-- Form to edit inventory item -->
<form method="post" class="row g-3">
    <div class="col-md-4">
        <input type="text" name="Name" class="form-control" placeholder="Item Name" value="@Model.InventoryItem.Name" required />
    </div>
    <div class="col-md-2">
        <input type="number" name="Quantity" class="form-control" placeholder="Quantity" value="@Model.InventoryItem.Quantity" required />
    </div>
    <div class="col-md-3">
        <input type="text" name="Category" class="form-control" placeholder="Category" value="@Model.InventoryItem.Category" />
    </div>
    <div class="col-md-12">
        <textarea name="Description" class="form-control" placeholder="Description">@Model.InventoryItem.Description</textarea>
    </div>
    <div class="col-md-3">
        <input type="datetime-local" name="DueDate" class="form-control" value="@Model.InventoryItem.DueDate?.ToString("yyyy-MM-ddTHH:mm:ss")" />
    </div>
    <div class="col-md-3">
        @* <select name="Status" class="form-select">
            <option value="InStock" @(Model.InventoryItem.Status == "InStock" ? "selected" : "")>In Stock</option>
            <option value="LowStock" @(Model.InventoryItem.Status == "LowStock" ? "selected" : "")>Low Stock</option>
            <option value="Ordered" @(Model.InventoryItem.Status == "Ordered" ? "selected" : "")>Ordered</option>
            <option value="Discontinued" @(Model.InventoryItem.Status == "Discontinued" ? "selected" : "")>Discontinued</option>
        </select> *@
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
    </div>
</form>
